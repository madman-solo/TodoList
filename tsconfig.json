{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react", // 关键：指定 JSX 导入源为 Emotion

    "types": [
      "@emotion/react/types/css-prop",
      "@types/emoji-mart",
      "react",
      "react-dom"
    ],
    "moduleResolution": "NodeNext",
    "module": "NodeNext", // 关键：与 moduleResolution 保持一致

    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "target": "ESNext",
    // "module": "ESNext",
    "esModuleInterop": true,
    "strict": true
  }
}
